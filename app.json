{
  "name": "my-saas-starter",
  "description": "Starter kit with Postgres",
  "repository": "https://github.com/username/repo-name",
  "logo": "https://example.com/logo.png",
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "SECRET_KEY": {
      "description": "A secret key for session signing",
      "generator": "secret"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "15"
      }
    }
  ],
  "scripts": {
    "postdeploy": "npm run db:migrate && npm run db:seed"
  }
}
